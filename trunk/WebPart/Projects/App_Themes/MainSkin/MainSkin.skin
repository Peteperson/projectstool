<asp:TextBox skinid="txtCmnt" width="20px" Font-Names="Tahoma,Verdana" style="text-align:left; background: #CCCCCC" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtDecimal" width="50px" Font-Names="Tahoma,Verdana" style="text-align:right" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtText" width="100px" Font-Names="Tahoma,Verdana" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtTextCenter" width="55px" style="text-align:center" Font-Names="Tahoma,Verdana" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtTextLong" width="150px" Font-Names="Tahoma,Verdana" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtInteger" width="40px" Font-Names="Tahoma,Verdana" style="text-align:right" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtDate" width="70px" Font-Names="Tahoma,Verdana" style="text-align:right" runat="server"></asp:TextBox>
<asp:TextBox skinid="txtTextVeryLong" width="400px" Font-Names="Tahoma,Verdana" runat="server"></asp:TextBox>
