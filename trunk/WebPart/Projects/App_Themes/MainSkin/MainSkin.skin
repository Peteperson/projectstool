
<asp:GridView runat="server" SkinId="gridviewSkin" AutoGenerateColumns="False" RowStyle-HorizontalAlign="Left"
    BackColor="#EAEAEA" BorderColor="Tan" BorderWidth="1px" CellPadding="0"
    ForeColor="Black" PageSize="15" FooterStyle-Wrap=false >
    <FooterStyle BackColor="Tan" />
    <PagerStyle BackColor="#2C486E" ForeColor="White" HorizontalAlign="Center" />
    <PagerSettings Mode="NumericFirstLast" />
    <SelectedRowStyle BackColor="#7593B9" ForeColor="White" Font-Bold="true" />
    <HeaderStyle BackColor="#2C486E" Font-Bold="True" ForeColor="White" Font-Size="10pt" Height="25px" />
    <AlternatingRowStyle BackColor="#D3D3D3" />    
</asp:GridView>

<asp:GridView runat="server" SkinId="gridviewSkinSmall" AutoGenerateColumns="False" RowStyle-HorizontalAlign="Left"
    ForeColor="Black" BackColor="#EAEAEA" PageSize="15" FooterStyle-Wrap="false" CssClass="NoTopBorderLine">
    <FooterStyle BackColor="Tan" />
    <PagerStyle BackColor="#2C486E" ForeColor="White" HorizontalAlign="Center" />
    <PagerSettings Mode="NumericFirstLast" />
    <SelectedRowStyle BackColor="#7593B9" ForeColor="White"  Font-Bold="true" />
    <HeaderStyle BackColor="#2C486E" Font-Bold="True" ForeColor="White" />
    <AlternatingRowStyle BackColor="#D3D3D3" />    
</asp:GridView>

<asp:Calendar SkinId="clndMain" runat="server" BackColor="#7593B9" DayNameFormat="Shortest" ForeColor="Black" Width="200px">
    <SelectedDayStyle BackColor="#7593B9" Font-Bold="True" ForeColor="White" />
    <DayHeaderStyle BackColor="Tan" ForeColor="Black" />
    <TitleStyle BackColor="#2C486E" Font-Bold="True" Font-Size="11pt" ForeColor="White" />
    <WeekendDayStyle BackColor="LightGray" ForeColor="Black" />
</asp:Calendar>

<asp:TextBox SkinId="txtDef" runat="server" Width="90%" ></asp:TextBox>
